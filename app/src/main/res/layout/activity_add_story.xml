<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.addStory.AddStoryActivity">

    <ImageView
        android:id="@+id/image_story"
        android:layout_width="262dp"
        android:layout_height="232dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_place_holder" />

    <Button
        android:id="@+id/camera_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="Camera"
        app:layout_constraintEnd_toStartOf="@+id/galery_story"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="@+id/image_story"
        tools:layout_editor_absoluteY="324dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/galery_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Gallery"
        app:layout_constraintEnd_toEndOf="@+id/image_story"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/image_story"
        app:layout_constraintTop_toBottomOf="@+id/image_story" />

    <TextView
        android:id="@+id/description_story"
        android:layout_width="293dp"
        android:layout_height="220dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="56dp"
        android:text="Deskripsi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="@+id/image_story"
        app:layout_constraintTop_toBottomOf="@+id/image_story" />

    <Button
        android:id="@+id/submit_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="@+id/description_story"
        app:layout_constraintStart_toStartOf="@+id/description_story"
        app:layout_constraintTop_toBottomOf="@+id/description_story" />
</androidx.constraintlayout.widget.ConstraintLayout>